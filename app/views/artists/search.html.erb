<%=form_with url:  search_artists_path ,method: :get do |f|%>
  <div class="text-center my-3">
    <div class="my-2 font-weight-bold">検索</div>
    <%= f.search_field :search, value: params[:search], placeholder: "検索: アーティスト名", class: "w-full p-4 mx-auto text-sm border-sky-400 rounded-lg bg-slate-50 border-2", type: "text" %>
  </div>
<% end %>

<h1>検索結果</h1>
<div class="flex justify-center flex-wrap">
  <% if @artists.present? %>
    <% @artists.each do |artist|%>
      <div class="m-10 outline break-words p-5 rounded-md">
        <%= artist.id %><br>
        <%= artist.name %><br>
        <% if artist.images.any? %>
          <%= image_tag(artist.images.first["url"] ,style: "width: 150px; height: 187px; display: inline-block;") %>
        <% end %><br>
      </div>
    <% end %>
  <% end %>
</div>
